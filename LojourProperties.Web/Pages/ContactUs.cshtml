@page
@model LojourProperties.Web.Pages.ContactUsModel

@{
    ViewData["Title"] = "Contact Us";

    ViewData["Title2"] = "Contact Us";
}
<partial name="_Breadcrumb" />


<div class="main-content-area clearfix">

<section class="custom-padding about-us">
    <section class="section-padding gray no-top ">
        <!-- Main Container -->
        <div class="container" style="margin-top:40px;">
            <!-- Row -->
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 no-padding commentForm">
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <form method="post" >
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-xs-12">
                                    <div class="form-group">
                                        <input type="text" placeholder="Name" asp-for="ContactUs.Fullname" class="form-control" required="">
                                    </div>
                                    <div class="form-group">
                                        <input type="email" placeholder="Email" asp-for="ContactUs.Email" class="form-control" required="">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" placeholder="Phone Number" asp-for="ContactUs.Phone" class="form-control" required="">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" placeholder="Subject" asp-for="ContactUs.Subject" class="form-control" required="">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-xs-12">
                                    <div class="form-group">
                                        <textarea cols="12" rows="11" placeholder="Message..." asp-for="ContactUs.Message" class="form-control" required=""></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <button class="btn btn-theme" type="submit">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="contactInfo">
                            <div class="singleContadds">
                                <i class="fa fa-map-marker"></i>
                                <p> 29 Cairo Street <br />Wuse 2, FCT, Abuja </p>
                            </div>
                            <div class="singleContadds phone">
                                <i class="fa fa-phone"></i>
                                <p>070 605 30000 - <span>Office</span> </p>
                             </div>
                            <div class="singleContadds"> <i class="fa fa-envelope"></i> <a href="mailto:contact@lojour.com">contact@lojour.com</a> <a href="mailto:contact@lojour.com">contact@lojour.com</a> </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Row End -->
        </div>
        <!-- Main Container End -->
    </section>
</section>
 </div>
 

    @await Component.InvokeAsync("Footer")

    <style>
        /* Style for the floating alert */
        #floatingAlert {
            display: none;
            position: fixed;
            top: 90px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #3e6737c7;
            color: black;
            padding: 15px;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            width: 300px;
            text-align: center;
        }
    </style>
    <div id="floatingAlert"></div>
 @if (TempData["ccsuccess"] != null)
{
    <script>
        // Function to show the floating alert
        function showFloatingAlert() {
            // Get the alert element
            var alertElement = document.getElementById("floatingAlert");

            // Set the content of the alert
            alertElement.innerHTML = "Thank you for reaching out! We'll review your inquiry and get back to you shortly. Feel free to explore our listings in the meantime.";

            // Show the alert
            alertElement.style.display = "block";

            // Hide the alert after 3 seconds (adjust as needed)
            setTimeout(function () {
                alertElement.style.display = "none";
            }, 5000);
        }

        // Show the floating alert when the page is loaded
        window.onload = function () {
            showFloatingAlert();
        };
    </script>

}
