@page
@model LojourProperties.Web.Areas.Main.Pages.PropertySection.Features.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE PROPERTY FEATURE </h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PropertyFeature.Id" />
            <div class="form-group">
                <label asp-for="PropertyFeature.FeaturesCategoryId" class="control-label"></label>
                <select asp-for="PropertyFeature.FeaturesCategoryId" class="form-control" asp-items="ViewBag.FeaturesCategoryId"></select>
                <span asp-validation-for="PropertyFeature.FeaturesCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyFeature.PropertyId" class="control-label"></label>
                <select asp-for="PropertyFeature.PropertyId" class="form-control" asp-items="ViewBag.PropertyId"></select>
                <span asp-validation-for="PropertyFeature.PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyFeature.Description" class="control-label"></label>
                <input asp-for="PropertyFeature.Description" class="form-control" />
                <span asp-validation-for="PropertyFeature.Description" class="text-danger"></span>
            </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
