@page
@model LojourProperties.Web.Areas.Main.Pages.PropertySection.Section.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE PROPERTY </h3>
        <h5 style="padding:10px; margin:10px;" class="btn btn-primary">Ref. ID: @Model.Property.PropertyRefID</h5>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Property.Id" />
                    <input type="hidden" asp-for="Property.Key" />
                    <input type="hidden" asp-for="Property.PropertyRefID" />
                    <input type="hidden" asp-for="Property.Date" />
                    <input type="hidden" asp-for="Property.DateAdded" />

                    <div class="form-group">
                        <label asp-for="Property.AgentId" class="control-label"></label>
                        <select asp-for="Property.AgentId" class="form-control" asp-items="ViewBag.AgentId" class="form-control select2 select2-primary js-example-basic-single" data-dropdown-css-class="select2-primary"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Property.Title" class="control-label"></label>
                        <textarea asp-for="Property.Title" class="form-control"></textarea>
                        <span asp-validation-for="Property.Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Property.Amount" class="control-label"></label>
                        <input asp-for="Property.Amount" class="form-control" />
                        <span asp-validation-for="Property.Amount" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Property.ShortDescription" class="control-label"></label>
                        <textarea asp-for="Property.ShortDescription" class="form-control"></textarea>
                        <span asp-validation-for="Property.ShortDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Property.FullDescription" class="control-label"></label>
                        <textarea id=" " asp-for="Property.FullDescription" class="form-control summernote">

                         </textarea>
                        <span asp-validation-for="Property.FullDescription" class="text-danger"></span>
                    </div>

 
                    <div class="form-group">
                        <label asp-for="Property.PropertyCategoryId" class="control-label"></label>
                        <select asp-for="Property.PropertyCategoryId" class="form-control" asp-items="ViewBag.PropertyCategoryId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Property.PrivacyCategoryId" class="control-label"></label>
                        <select asp-for="Property.PrivacyCategoryId" class="form-control" asp-items="ViewBag.PrivacyCategoryId"></select>
                    </div>
                    

                    <div class="form-group">
                        <label asp-for="Property.PropertyStatus" class="control-label"></label>
                        @Html.DropDownListFor(model => model.Property.PropertyStatus, new SelectList(Enum.GetValues(typeof(LojourProperties.Domain.Models.Enum.PropertyStatus))), new { @class = "form-control" })

                        <span asp-validation-for="Property.PropertyStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Property.ActivityStatus" class="control-label"></label>
                        @Html.DropDownListFor(model => model.Property.ActivityStatus, new SelectList(Enum.GetValues(typeof(LojourProperties.Domain.Models.Enum.ActivityStatus))), new { @class = "form-control" })

                        <span asp-validation-for="Property.ActivityStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Property.SortOrder" class="control-label"></label>
                        <input asp-for="Property.SortOrder" class="form-control" />
                        <span asp-validation-for="Property.SortOrder" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
