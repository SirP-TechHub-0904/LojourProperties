                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OperatingRegion.Region)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OperatingRegion.Region)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OperatingRegion.Country)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OperatingRegion.Country)
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="OperatingRegion.Id" class="btn btn-primary" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back to List</a>
