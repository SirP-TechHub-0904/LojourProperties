@page
@model LojourProperties.Web.Areas.Main.Pages.RegionPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DELETE REGION </h3>


    </div>
    <!-- /.card-header -->
