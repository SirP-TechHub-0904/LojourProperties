                <div>
                    <h4>OperatingRegion</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OperatingRegion.City)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OperatingRegion.City)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OperatingRegion.State)
                        </dt>
