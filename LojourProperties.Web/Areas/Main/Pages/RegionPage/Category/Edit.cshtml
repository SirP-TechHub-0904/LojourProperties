@page
@model LojourProperties.Web.Areas.Main.Pages.RegionPage.Category.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">EDIT LOCATION CATEGORY </h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CategoryLocation.Id" />
                    <div class="form-group">
                        <label asp-for="CategoryLocation.Name" class="control-label"></label>
                        <input asp-for="CategoryLocation.Name" class="form-control" />
                        <span asp-validation-for="CategoryLocation.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryLocation.OperatingRegionId" class="control-label"></label>
                        <select asp-for="CategoryLocation.OperatingRegionId" class="form-control" asp-items="ViewBag.OperatingRegionId"></select>
                        <span asp-validation-for="CategoryLocation.OperatingRegionId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a href="@Model.CategoryLocation.ImageUrl" target="_blank">
                            <img src="@Model.CategoryLocation.ImageUrl" style="max-height:100px" class="img-fluid" />
                        </a>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryLocation.ImageUrl" class="control-label">Image</label><br />
                        <input type="file" class="control-label" asp-for="file" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
